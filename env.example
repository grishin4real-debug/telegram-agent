# =============================================================================
# TELEGRAM AGENT - ПРИМЕР ФАЙЛА КОНФИГУРАЦИИ
# =============================================================================
# Скопируйте этот файл в .env и заполните своими значениями
# Команда: cp .env.example .env

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА (ОБЯЗАТЕЛЬНО)
# =============================================================================

# Токен вашего Telegram бота
# Получить: напишите @BotFather в Telegram, команда /newbot
TELEGRAM_BOT_TOKEN=8143120662:AAFuniDLhtehe4ZWUtjMLVjSwqZmKJQ1www

# ID вашего Telegram канала
# Формат: @your_channel_name или -100123456789
# Как получить ID канала:
# 1. Добавьте бота в канал как администратора (права на публикацию)
# 2. Отправьте любое сообщение в канал
# 3. Откройте в браузере: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# 4. Найдите "chat":{"id":-100123456789,...} в ответе
TELEGRAM_CHANNEL_ID=@your_channel_name

# =============================================================================
# НАСТРОЙКИ РАСПИСАНИЯ ПУБЛИКАЦИЙ (ОПЦИОНАЛЬНО)
# =============================================================================

# Час публикации (0-23), по умолчанию 10
POST_HOUR=10

# Минута публикации (0-59), по умолчанию 0
POST_MINUTE=0

# Интервал между публикациями в днях, по умолчанию 3
POST_INTERVAL_DAYS=3

# =============================================================================
# НАСТРОЙКИ КОНТЕНТА (ОПЦИОНАЛЬНО)
# =============================================================================

# Использовать эмодзи в постах (true/false)
USE_EMOJI=true

# Добавлять хэштеги к постам (true/false)
USE_HASHTAGS=true

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ (ОПЦИОНАЛЬНО)
# =============================================================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Путь к файлу логов (оставьте пустым для вывода только в консоль)
LOG_FILE=telegram_agent.log

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ (ОПЦИОНАЛЬНО)
# =============================================================================

# Тестовый режим - не публикует посты, только показывает что будет опубликовано
TEST_MODE=false

# Максимальное количество повторных попыток при ошибке
MAX_RETRIES=3

# Задержка между повторными попытками (в секундах)
RETRY_DELAY=60